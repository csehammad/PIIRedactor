<Window x:Class="PIIRedactorApp.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="300" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <ComboBox Name="TemplateBox"/>
            <CheckBox Name="UseML" Content="Use ML Model" Margin="0,10"/>
            <Button Content="Save" Click="Save_Click" Width="75" Margin="0,20,0,0" HorizontalAlignment="Right"/>
        </StackPanel>
    </Grid>
</Window>
